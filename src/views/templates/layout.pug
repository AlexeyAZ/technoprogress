doctype html

- var title = 'Project title';
- var mail = 'info@t-progress.ru';
- var bodyClass = "";

block vars
    
html
    head
        meta(charset="utf-8")
        meta(name="description", content="")
        meta(name="viewport", content="width=device-width, initial-scale=1, minimal-ui")
        title #{title}
        <link rel="apple-touch-icon" sizes="180x180" href="./favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="./favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="194x194" href="./favicon/favicon-194x194.png">
        <link rel="icon" type="image/png" sizes="192x192" href="./favicon/android-chrome-192x192.png">
        <link rel="icon" type="image/png" sizes="16x16" href="./favicon/favicon-16x16.png">
        <link rel="manifest" href="./favicon/manifest.json">
        <link rel="mask-icon" href="./favicon/safari-pinned-tab.svg" color="#303392">
        <meta name="msapplication-TileColor" content="#303392">
        <meta name="msapplication-TileImage" content="./favicon/mstile-144x144.png">
        <meta name="theme-color" content="#ffffff">
        link(rel="stylesheet", href="styles/vendor.css")
        link(rel="stylesheet", href="styles/main.css")
        block scripts
    body(class=bodyClass).trans_exit
        include ../components/svg
        include ../components/page-transition
        div.wrapper
            include ../components/header
            block content
            include ../components/footer
        script(src="scripts/vendor.js" defer)
        script(src="scripts/app.js" defer)
        script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZgQ_QxMCEdDStSX3N0Zmw8e-DV-pYAww" defer)
